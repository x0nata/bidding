# Development Environment Configuration for Horn of Antiques Platform

# API Configuration - Local development
REACT_APP_BACKEND_URL=http://localhost:5002/api
REACT_APP_API_URL=http://localhost:5002/api
REACT_APP_WEBSOCKET_URL=ws://localhost:5002
REACT_APP_SOCKET_URL=http://localhost:5002

# Frontend URL for CORS and redirects
REACT_APP_FRONTEND_URL=http://localhost:3000

# Security Settings (more permissive for development)
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_ENABLE_CONSOLE_LOGS=true
REACT_APP_ENABLE_DEBUG_MODE=true

# Admin Security (shorter timeouts for development)
REACT_APP_ADMIN_SESSION_TIMEOUT=3600000
REACT_APP_MAX_LOGIN_ATTEMPTS=10
REACT_APP_LOCKOUT_DURATION=300000

# Feature Flags
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_ENABLE_SECURITY_HEADERS=false
REACT_APP_ENABLE_RATE_LIMITING=false

# Analytics & Monitoring (disabled for development)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# Social Media Links (configurable)
REACT_APP_YOUTUBE_URL=https://youtube.com/@hornofantiques
REACT_APP_INSTAGRAM_URL=https://instagram.com/hornofantiques
REACT_APP_TWITTER_URL=https://twitter.com/hornofantiques
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/hornofantiques

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_VERSION=$npm_package_version
