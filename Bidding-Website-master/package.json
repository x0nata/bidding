{
  "name": "horn-of-antiques-frontend",
  "version": "0.1.0",
  "description": "Frontend React application for Horn of Antiques - Antique Auction for Ethiopia",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.3",
    "axios": "^1.6.8",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.12.0",
    "react-moment": "^1.1.3",
    "react-redux": "^9.1.2",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1",
    "react-select": "^5.8.0",
    "react-toastify": "^10.0.5",
    "socket.io-client": "^4.7.5"
  },
  "scripts": {
    "start": "craco start",
    "build": "CI=false craco build",
    "build:fallback": "CI=false react-scripts build",
    "build:vercel": "npm run build && node prepare-for-vercel.js",
    "eject": "react-scripts eject",
    "vercel-build": "npm run build",
    "vercel-build:fallback": "npm run build:fallback",
    "preview": "npm run build && npx serve -s build",
    "test": "craco test --watchAll=false",
    "test:watch": "craco test"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
