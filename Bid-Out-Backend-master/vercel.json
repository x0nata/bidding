{
  "version": 2,
  "name": "horn-of-antiques-backend",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/auction-management/process-expired",
      "schedule": "*/5 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
