# Production Environment Variables for Vercel Deployment
# Copy these variables to your Vercel project settings

# ===== BACKEND ENVIRONMENT VARIABLES =====
# Add these to your backend Vercel project

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/hornofantiques?retryWrites=true&w=majority
DATABASE_CLOUD=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/hornofantiques?retryWrites=true&w=majority

# JWT Secret (generate a secure 32+ character string)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long

# Cloudinary Configuration for File Uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Gmail App Password recommended)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# CORS Configuration
FRONTEND_URL=https://your-frontend.vercel.app

# Server Configuration
PORT=5000
NODE_ENV=production

# ===== FRONTEND ENVIRONMENT VARIABLES =====
# Add these to your frontend Vercel project

# API Configuration
REACT_APP_BACKEND_URL=https://your-backend.vercel.app/api
REACT_APP_API_URL=https://your-backend.vercel.app/api
REACT_APP_WEBSOCKET_URL=wss://your-backend.vercel.app
REACT_APP_SOCKET_URL=https://your-backend.vercel.app

# Frontend URL for CORS and redirects
REACT_APP_FRONTEND_URL=https://your-frontend.vercel.app

# Security Settings (Production)
REACT_APP_ENABLE_DEVTOOLS=false
REACT_APP_ENABLE_CONSOLE_LOGS=false
REACT_APP_ENABLE_DEBUG_MODE=false

# Admin Security
REACT_APP_ADMIN_SESSION_TIMEOUT=1800000
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=900000

# Feature Flags
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_ENABLE_RATE_LIMITING=true

# Analytics & Monitoring
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_ID=your-analytics-id

# Social Media Links
REACT_APP_YOUTUBE_URL=https://youtube.com/@hornofantiques
REACT_APP_INSTAGRAM_URL=https://instagram.com/hornofantiques
REACT_APP_TWITTER_URL=https://twitter.com/hornofantiques
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/hornofantiques

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_VERSION=$npm_package_version

